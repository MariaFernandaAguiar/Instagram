<div class="container home-sections d-flex flex-row justify-content-center align-itens-center">
    <div class="images-section pt-3 d-none d-lg-block"></div>

    <div class ="login-section pt-3">
        <div class="card text-center pt-5" style="width: 23rem">
            <%= image_tag('logo.png', class:"card-img-top") %>
            <div class="card-body">
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                <div class="mb-3 mt-4">
                    <%# <input type="email" class="form-control" id="email" placeholder="Phone number, username or email"> %>
                    <%= f.email_field :email, class:"form-control", placeholder: "Phone number, username or email" %>
                </div>
                <div class="mb-3">
                    <%# <input type="password" class="form-control" id="password" placeholder="Password"> %>
                    <%= f.password_field :password, class:"form-control", placeholder:"Password" %>
                </div>
                <%# <a href="#" class="btn btn-primary d-block">Log In</a> %>
                <%= f.submit "Log in" , class:"btn btn-primary w-100" %>

            <%end%>
                <div class="d.flex align-items-center mt-4">
                    <div class="line"></div>
                    <h2 class="line-text">OR</h2>
                    <div class="line"></div>
                </div>

                <a href="#" class="d-block mt-4 text-decoration-nome fw-bold">

                <%= image_tag("facebook.png", class:"facebook")%>
                    Log in with Facebook
                </a>

                <% if notice %>
                    <p class="notice"><%= notice %></p>
                <% else alert%>
                    <p class="alert"><%= alert %></p>
                <%end%>

                <a href="#" class="f5-6 d-block my-4 text-decoration-none">Forget password?</a>
    
            </div>

            <div class="card text-center py-2 mt-3" style="width: 23rem;">
                <div class="card-text">
                    Don`t have an account?
                    <%= link_to "Sign Up", new_user_registration_path, class:"f5-6 my-4 text-decoration-none" %>
                </div>
            </div>
        </div>
    
    </div>

</div>
